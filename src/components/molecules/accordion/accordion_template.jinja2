{%- set allowed_types = ["multiple", "single"] -%}
{%- set type = type if type in allowed_types else "single" -%}

import {
	Accordion,
	AccordionContent,
	AccordionItem,
	AccordionTrigger,
} from "@/components/ui/accordion";

export function AccordionComponent() {
	return (
		<Accordion type="{{ type }}" collapsible>
            {% for item in items %}
            <AccordionItem value="{{ item.value }}">
                <AccordionTrigger>{{ item.trigger }}</AccordionTrigger>
                <AccordionContent>
                    {{ item.content }}
                </AccordionContent>
            </AccordionItem>
            {% endfor %}
        </Accordion>
	);
}