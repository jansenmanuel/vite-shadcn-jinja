{%- set allowed_variants = ["default", "destructive", "outline", "secondary", "ghost", "link"] -%}
{%- set variant = button.variant if button.variant in allowed_variants else "default" -%}
{%- set allowed_sizes = ["default", "sm", "lg", "icon"] -%}
{%- set size = button.size if button.size in allowed_sizes else "default" -%}

import { Button } from "@/components/ui/button";

export function ButtonComponent() {
	return <Button id={{ button.id }}{% if variant != 'default' %} variant="{{ variant }}"{% endif %}{% if size != 'default' %} size="{{ size }}"{% endif %}>{{ button.children }}</Button>;
}
