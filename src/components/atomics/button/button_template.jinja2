{%- set allowed_variants = ["default", "destructive", "outline", "secondary", "ghost", "link"] -%}
{%- set variant = variant if variant in allowed_variants else "default" -%}
{%- set allowed_sizes = ["default", "sm", "lg", "icon"] -%}
{%- set size = size if size in allowed_sizes else "default" -%}

import { Button } from "@/components/ui/button";

export function ButtonComponent() {
	return <Button id={{ id }}{% if variant != 'default' %} variant="{{ variant }}"{% endif %}{% if size != 'default' %} size="{{ size }}"{% endif %}>{{ children }}</Button>;
}
