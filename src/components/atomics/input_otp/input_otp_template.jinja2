import { REGEXP_ONLY_DIGITS_AND_CHARS } from "input-otp";

import {
	InputOTP,
	InputOTPGroup,
	InputOTPSlot,
} from "@/components/ui/input-otp";

export function InputOTPComponent() {
	return (
		<InputOTP 
			id="{{ inputOTP.id }}" 
			maxLength={ {{ inputOTP.maxLength }} } 
			pattern={REGEXP_ONLY_DIGITS_AND_CHARS}
		>
			<InputOTPGroup>
                {% for i in range({{ inputOTP.maxLength }}) %}
				<InputOTPSlot index={ {{ i }} } />
                {% endfor %}
			</InputOTPGroup>
		</InputOTP>
	);
}
